// homepage > categories (e.g. new, best sellers, on sale) > lower the labels to being close to the bottom of the images
.section--gallery .overlay .innest {
  margin-top: 50%;
}

.breadcrumbs {
  visibility: hidden;
}

.momo-hidden {
  display: none;
}

/** about page */
body#about {
  #shopify-section-page-template {
    background: url('https://cdn.shopify.com/s/files/1/3100/6776/files/000010880003.jpg');
    color: white;

    h1 {
      color: white;
    }
    
    p {
      background: rgba(0, 0, 0, 0.5);
      padding: 15px 20px;
    }
  }
}

/** adjust "shop" button position on homepage */
.slide-buttons {
  position: absolute;
  left: 50%;
  margin-top: 8.5em !important; // momo change - "shop button"
}