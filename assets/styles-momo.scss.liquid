// homepage > categories (e.g. new, best sellers, on sale) > lower the labels to being close to the bottom of the images
.section--gallery .overlay .innest {
  margin-top: 50%;
}

.breadcrumbs {
  visibility: hidden;
}

.momo-hidden {
  display: none;
}

/** about page */
body#about {
  #shopify-section-page-template {
    background: url('https://cdn.shopify.com/s/files/1/3100/6776/files/about-back.jpg');
    background-size: cover;
    color: white;

    h1 {
      color: white;
    }
    
    p {
      background: rgba(0, 0, 0, 0.5);
      padding: 15px 20px;
    }
  }
}

/** homepage */
body#momosara {
  
  /** adjust "shop" button position on homepage */
  .slide-buttons {
    position: absolute;
    transform: translateX(-50%);
    bottom: 10%;
    @media screen and (min-width: 475px) {
      white-space: nowrap;
      bottom: 6%;
    }
  }
/**
    This block affects all "Image with text" sections.
    Examples:
      - Shop by collections
      - See momo studio moments
  */
  .image-with-text-section {
    /** text adjustments */
    .content {
      font-size: 17px;
      
      .h2-margin-top {
        margin-top: 1em;
      }
    }

  }

  .momo-vetrina-carousel {
    .grid {
      margin-left: 0;
      .column {
        margin-left: 0;
        @media screen and (max-width: 767px) {
          width: 100%;
        }
        width: 50%;
      }
    }
    color: white;
  }

  .homepage-spaced-row:last-child {
    margin-bottom: 25px;
  }

}