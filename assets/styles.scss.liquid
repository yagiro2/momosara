/* Main menu */

#main-menu {
  @include nav-font-style();
  position: fixed;
  left: 0;
  top: 0px;
  height: 100%;
  max-width: 100%;
  background: $nav-bg;
  color: $nav-text-col;
  z-index: 10011;
  opacity: 0;
  transform: translate3d(-50px, 0, 0);
  pointer-events: none;
  transition: $nav-flyout-transition;

  width: 50%;
  @media (max-width: 1000px) {
    width: 75%;
  }
  @media (max-width: $breakpoint-small-screen) {
    width: 100%;
  }

  h1, h2, h3, h4, h5, h6 {
    color: inherit;
  }

  .rte {
    a {
      @extend .feature-link;
      color: inherit;

      &:hover {
        color: inherit;
      }
    }
  }

  .main-menu-inner {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .main-menu-upper {
    display: block;
    padding: $menu-vertical-padding $menu-horizontal-padding 0;
    text-align: right;
  }

  .main-menu-toggle {
    display: inline-block;
    transition: transform 250ms ease;

    svg {
      height: $menu-icon-size;
      width: $menu-icon-size;
    }

    &:hover {
      transform: scale(1.2);
    }
  }

  .main-menu-links {
    flex: 1 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: $navigation-font-size;
    line-height: 1.2em;
    list-style: none;
    margin: 0px;
    padding: 0 0 $menu-vertical-padding;
    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    li {
      padding: 0;
    }
  }

  .main-menu-link {
    display: block;
    margin: 0.2em 0;
    transition: transform 250ms cubic-bezier(0.23, 0.51, 0.58, 1);
  }

  @media (min-width: 1001px) {
    .main-menu-list-item:hover {
      .main-menu-link {
        transform: translate3d(8px, 0, 0);
      }

      .child-indicator {
        transform: translate3d(3px, 0, 0);
      }

      .child-indicator__primary {
        opacity: 0;
        transform: scaleX(0.9) scaleY(0.9) translateX(2px);
      }

      .child-indicator__secondary {
        opacity: 1;
        transform: scaleY(1);
      }
    }
  }

  .has-children {
    position: relative;

    .main-menu-link {
      padding-right: $menu-icon-size + 20px;
    }

    .child-indicator {
      pointer-events: none;
      position: absolute;
      right: 0;
      top: 0.55em;
      line-height: $menu-icon-size;
      transition: transform 200ms linear;
      svg {
        width: $menu-icon-size;
        height: $menu-icon-size;
        vertical-align: top;
      }

      @media (max-width: $breakpoint-small-screen) {
        top: $mobile-navigation-font-size / 3;
      }
    }

    .child-indicator__primary {
      transition: all 200ms linear;
    }

    .child-indicator__secondary {
      position: absolute;
      top: 0;
      left: 0;
      opacity: 0;
      transform: scaleY(0.7);
      transition: all 200ms linear;
    }

    &.expanded .child-indicator {
      transform: rotate(180deg);
    }
  }

  .main-menu-account-link {
    opacity: 0.5;
  }

  .main-menu-panel-wrapper {
    position: relative;
    height: calc(100% - #{ $menu-vertical-padding } - #{ $menu-icon-size });
  }

  .main-menu-panel {
    position: absolute;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
    height: 100%;
    width: 100%;
    padding: 0 $menu-horizontal-padding $menu-vertical-padding;
    transition: opacity 500ms ease, transform 500ms ease;
  }

  .main-menu-panel--child {
    .main-menu-links {
      flex: 0 0 auto;
    }
  }

  .main-menu-panel--inactive-right {
    pointer-events: none;
    opacity: 0;
    left: 0;
    top: 0;
    transform: translate3d(10%, 0, 0);
  }

  .main-menu-panel--inactive-left {
    pointer-events: none;
    opacity: 0;
    left: 0;
    top: 0;
    transform: translate3d(-25%, 0, 0);
  }
}

