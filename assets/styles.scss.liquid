/* A flexbox layout */

@mixin flexbox() {
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
}
@mixin flex($values) {
  -webkit-box-flex: $values;
  -moz-box-flex:  $values;
  -webkit-flex:  $values;
  -ms-flex:  $values;
  flex:  $values;
}
@mixin order($val) {
  -webkit-box-ordinal-group: $val;
  -moz-box-ordinal-group: $val;
  -ms-flex-order: $val;
  -webkit-order: $val;
  order: $val;
}
@mixin flex-grow($val) {
  -webkit-box-flex: $val;
  -webkit-flex-grow: $val;
  -moz-flex-grow: $val;
  -ms-flex-positive: $val;
  flex-grow: $val;
}
@mixin flex-basis($val) {
  -webkit-flex-basis: $val;
  -moz-flex-basis: $val;
  -ms-flex-preferred-size: $val;
  flex-basis: $val;
}
@mixin flex-wrap-wrap() {
  -webkit-flex-wrap: wrap;
  -moz-flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
}
@mixin flex-wrap-nowrap() {
  -webkit-flex-wrap: nowrap;
  -moz-flex-wrap: nowrap;
  -ms-flex-wrap: none;
  flex-wrap: nowrap;
}

$flexible-layout-gutter: 0px;
// warning: do not add a .cf to a .flexible-layout - breaks in Safari
.flexible-layout {
  margin-left: -$flexible-layout-gutter;
  margin-bottom: -$flexible-layout-gutter;

  @include flexbox();
  @include flex-wrap-wrap();

  -webkit-box-align: stretch;
  -ms-flex-align: stretch;
  -webkit-align-items: stretch;
  -moz-align-items: stretch;
  -ms-align-items: stretch;
  -o-align-items: stretch;
  align-items: stretch;

  &.valign-middle > [class^="column"] {
    -ms-flex-item-align: center;
    -webkit-align-self: center;
    align-self: center;
  }
  &.valign-bottom > [class^="column"] {
    -ms-flex-item-align: flex-end;
    -webkit-align-self: flex-end;
    align-self: flex-end;
  }

  .column-quarter,
  .column-third,
  .column-half,
  .column-two-thirds,
  .column-three-quarters,
  .column-full {
    float: left;
    margin-left: $flexible-layout-gutter;
    margin-bottom: $flexible-layout-gutter;
    @include flex(0 0 auto);
  }

  .column-quarter {
    width: calc(25% - #{$flexible-layout-gutter});
    -webkit-flex-basis: calc(25% - #{$flexible-layout-gutter});
    flex-basis: calc(25% - #{$flexible-layout-gutter});
  }
  .column-third {
    width: calc(33.333% - #{$flexible-layout-gutter});
	@include flex-basis(calc(33.333% - #{$flexible-layout-gutter}));
  }
  .column-half {
    width: calc(50% - #{$flexible-layout-gutter});
	@include flex-basis(calc(50% - #{$flexible-layout-gutter}));
  }
  .column-two-thirds {
    width: calc(66.666% - #{$flexible-layout-gutter});
	@include flex-basis(calc(66.666% - #{$flexible-layout-gutter}));
  }
  .column-three-quarters {
    width: calc(75% - #{$flexible-layout-gutter});
	@include flex-basis(calc(75% - #{$flexible-layout-gutter}));
  }
  .column-full {
    width: calc(100% - #{$flexible-layout-gutter});
	@include flex-basis(calc(100% - #{$flexible-layout-gutter}));
  }
}

@media (max-width: 767px) {
  .flexible-layout {
    margin-left: auto;
    display: block;

    @include flex-wrap-wrap();

    .column-quarter,
    .column-third,
    .column-half,
    .column-two-thirds,
    .column-three-quarters,
    .column-full {
      float: none;
      margin-left: auto;
      width: auto;
      @include flex-basis(initial);
    }
  }
}

