.pageheader {
  position: relative;
  color: $header-text-col;

  a {
    color: inherit;
  }

  svg {
    vertical-align: top;
  }

  svg, svg g {
    fill: currentColor;
  }

  .logo .logo__contrast-image {
    display: none;
  }

  $menu-icon-link-v-pad: 5px;
  $menu-icon-width: 30px;
  $menu-icon-top-offset: 7px;

  .main-menu-toggle {
    @include small-font();
    position: relative;
    text-transform: uppercase;
    padding: $menu-icon-link-v-pad 0 $menu-icon-link-v-pad ($menu-icon-width + $body-font-size);

    &:hover .main-menu-icon::before {
      transform: translateY(-2px);
    }

    &:hover .main-menu-icon::after {
      transform: translateY(-7px);
    }

    &:hover .main-menu-icon span::before {
      opacity: 1;
      transform: translateY(0);
      transition-delay: 150ms;
    }
  }

  .main-menu-toggle__text {
    vertical-align: text-top;
  }

  .main-menu-icon {
    position: absolute;
    top: 1px;
    left: 0;
    height: $body-font-size;
    width: $menu-icon-width;

    &::before,
    &::after,
    span::before {
      content: '';
      position: absolute;
      left: 0;
      top: round($body-font-size / 2) + $menu-icon-link-v-pad;
      width: $menu-icon-width;
      height: 2px;
      border-bottom: 2px solid;
      transition:
        transform 400ms cubic-bezier(0.42, 0, 0.16, 0.99),
        opacity 400ms cubic-bezier(0.42, 0, 0.16, 0.99),
        background-color 250ms ease;
    }

    &::before {
      margin-top: -$menu-icon-top-offset;
    }

    &::after {
      margin-top: -$menu-icon-top-offset + 12px;
    }

    span::before {
      margin-top: -$menu-icon-top-offset + 12px;
      opacity: 0;
      transform: translateY(3px);
    }
  }

  // chrome transition bug
  .main-menu-toggle, a { transition: none }
}

